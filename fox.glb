<a-scene embedded arjs="trackingMethod: best; sourceType: webcam;">
  
  <!-- 光源 -->
  <a-light type="ambient" color="#ffffff"></a-light>
  <a-light type="directional" intensity="0.5" position="0 5 5"></a-light>

  <!-- 相機 -->
  <a-entity camera></a-entity>

  <script>
    const foxModels = ["fox_stand.glb", "fox_sleep.glb"];
    const foxCount = 5;

    for(let i=0; i<foxCount; i++){
      const x = (Math.random()*10 -5).toFixed(2);  // -5 ~ 5 公尺
      const y = 0;
      const z = (-1 * (Math.random()*10 + 0)).toFixed(2); // 0 ~ -10 公尺
      const model = foxModels[Math.floor(Math.random()*foxModels.length)];

      const fox = document.createElement("a-entity");
      fox.setAttribute("gltf-model", `url(${model})`);
      fox.setAttribute("position", `${x} ${y} ${z}`);
      fox.setAttribute("scale", "0.5 0.5 0.5");
      fox.setAttribute("animation-mixer", "");
      document.querySelector("a-scene").appendChild(fox);

      // 顧客靠近 2 公尺內提示
      fox.addEventListener('click', () => {
        alert("🎉 你找到小狐狸！");
      });
    }
  </script>
</a-scene>
